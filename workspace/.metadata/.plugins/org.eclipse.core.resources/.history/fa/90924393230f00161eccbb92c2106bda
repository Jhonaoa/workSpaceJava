int cantidadLetras = 5;

int []posiciones = new int [3];

posiciones[0]= 0;

public String modificarString(String letra, int[]pos)
{
	
	for(int i = 0 ; i <cantidadLetras; i++)
	{
		
		 for(int j = 0; j< pos.length;j++)
		{
			
			if(i == pos[j])
			{
				palabra_rayas += letra;
			}
			else
			{
				palabra_rayas = "-";
			}
			
		}
	}
	
	return palabra_rayas;
	//System.out.print(palabra_rayas);
}